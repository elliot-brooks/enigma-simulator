  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "Current File",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "java",
      "name": "Launch App",
      "request": "launch",
      "cwd": "${workspaceFolder}/enigma_machine_simulator",
      "mainClass": "com.enigma_machine.launcher.Launcher",
      "args": "gui"
    },
    {
      "type": "java",
      "name": "Launch CLI",
      "request": "launch",
      "cwd": "${workspaceFolder}/enigma_machine_simulator",
      "mainClass": "com.enigma_machine.launcher.Launcher",
      "args": "cli"
    }
  ]
}
